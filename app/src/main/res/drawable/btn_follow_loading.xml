<?xml version="1.0" encoding="utf-8"?><!--drawable/btn_following.xml-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp"
                android:color="@color/follow_button_loading"
                android:textSize="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/follow_button_loading" >
                    </stroke>
                    <corners android:radius="@dimen/follow_button_radius" >
                    </corners>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>